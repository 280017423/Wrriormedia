<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingBottom="10dip">

    <TextView
        android:id="@+id/tv_common_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/download_app_info"
        android:textColor="#333333"
        android:textSize="@dimen/size_1" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@id/tv_common_title"
        android:background="#e0e0e0" />

    <TextView
        android:id="@+id/tv_common_progress"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_common_title"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="0%"
        android:textColor="#333333"
        android:textSize="@dimen/size_2"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/pb_common_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_below="@id/tv_common_title"
        android:layout_toLeftOf="@id/tv_common_progress"
        android:padding="15dp"
        android:progressDrawable="@drawable/progressbar_color" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0" />
</RelativeLayout>